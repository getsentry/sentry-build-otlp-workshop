{
  "name": "sentry-build-otlp-workshop-api",
  "version": "1.0.0",
  "description": "OpenTelemetry-instrumented Node.js e-commerce API for Sentry",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node --import ./instrument-otel.js src/server.js",
    "dev": "nodemon --import ./instrument-otel.js src/server.js",
    "test": "node --import ./instrument-otel.js src/utils/loadTest.js",
    "test:api": "curl -s http://localhost:3000/api/products | json_pp || curl http://localhost:3000/api/products",
    "db:setup": "node src/utils/setupDatabase.js",
    "cache:clear": "node src/utils/clearCache.js",
    "direct": "node --import ./instrument-otel.js src/server.js",
    "collector:start": "node scripts/run-collector.js start",
    "collector:stop": "node scripts/run-collector.js stop",
    "collector:logs": "tail -f .otel-collector/collector.log",
    "collector:health": "curl -s http://localhost:13133 && echo ''",
    "collector:gateway": "node --import ./instrument-otel-gateway.js src/server-gateway.js",
    "collector:products": "node --import ./instrument-otel-products.js src/server-products.js",
    "collector:orders": "node --import ./instrument-otel-orders.js src/server-orders.js",
    "collector:cleanup": "lsof -ti:3000,3001,3002 | xargs kill -9 2>/dev/null || true",
    "collector:all": "npm run collector:cleanup && concurrently -n collector,gateway,products,orders -c blue,green,yellow,magenta \"npm run collector:start\" \"npm run collector:gateway\" \"npm run collector:products\" \"npm run collector:orders\"",
    "collector:help": "echo '\nðŸš€ Collector Mode (Multi-Project Routing)\n' && echo 'Quick Start (one command):' && echo '  npm run collector:all\n' && echo 'Manual (separate terminals):' && echo '  Terminal 1: npm run collector:start' && echo '  Terminal 2: npm run collector:gateway' && echo '  Terminal 3: npm run collector:products' && echo '  Terminal 4: npm run collector:orders\n' && echo 'Port conflicts?' && echo '  npm run collector:cleanup (kills all services on ports 3000-3002)\n' && echo 'Then access via gateway:' && echo '  http://localhost:3000/api/products' && echo '  http://localhost:3000/api/orders\n'"
  },
  "keywords": [
    "opentelemetry",
    "otel",
    "sentry",
    "observability",
    "tracing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.208.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.54.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.54.0",
    "@opentelemetry/instrumentation": "^0.54.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-logs": "^0.54.0",
    "@opentelemetry/sdk-metrics": "^1.28.0",
    "@opentelemetry/sdk-node": "^0.54.0",
    "@opentelemetry/sdk-trace-node": "^1.28.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "tar": "^7.5.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.7"
  }
}
